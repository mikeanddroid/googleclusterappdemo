<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        card_view:cardCornerRadius="6dp"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#8004a8e9"
            android:orientation="vertical">

            <TextView
                android:id="@+id/locationInfoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:background="#1d96ba"
                android:gravity="start|center"
                android:paddingBottom="@dimen/custom_profile_padding"
                android:paddingLeft="@dimen/custom_profile_padding"
                android:paddingRight="@dimen/custom_profile_padding"
                android:paddingTop="@dimen/custom_profile_padding"
                android:text="Location Name"
                android:textAppearance="@style/amu_Bubble.TextAppearance.Light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/locationInfoGeo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:background="#1d96ba"
                android:gravity="start|center"
                android:paddingBottom="@dimen/custom_profile_padding"
                android:paddingLeft="@dimen/custom_profile_padding"
                android:paddingRight="@dimen/custom_profile_padding"
                android:paddingTop="@dimen/custom_profile_padding"
                android:text="Location Geo"
                android:textAppearance="@style/amu_Bubble.TextAppearance.Light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/locationInfoAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:background="#1d96ba"
                android:gravity="start|center"
                android:paddingBottom="@dimen/custom_profile_padding"
                android:paddingLeft="@dimen/custom_profile_padding"
                android:paddingRight="@dimen/custom_profile_padding"
                android:paddingTop="@dimen/custom_profile_padding"
                android:text="Location Address"
                android:textAppearance="@style/amu_Bubble.TextAppearance.Light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/locationInfoRating"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha=".8"
                android:background="#1d96ba"
                android:gravity="start|center"
                android:paddingBottom="@dimen/custom_profile_padding"
                android:paddingLeft="@dimen/custom_profile_padding"
                android:paddingRight="@dimen/custom_profile_padding"
                android:paddingTop="@dimen/custom_profile_padding"
                android:text="Rating"
                android:textAppearance="@style/amu_Bubble.TextAppearance.Light"
                android:textColor="@color/common_google_signin_btn_text_dark_default"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>